<% if logged_in? %> <!--ログイン済みユーザーの場合-->
  <% if micropost.like_user(current_user.id) %>
    <%= button_to like_path(@likes, micropost_id: micropost.id), method: :delete, id: "like-button", remote: true do %> 
      <%= image_tag("icon_red_heart.png") %>
      <span>
        <%= micropost.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to like_path(micropost),id: "like-button", remote: true do %>  
      <%= image_tag("icon_heart.png") %>
      <span>
        <%= micropost.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %> <!--未ログインユーザーの場合-->
  <%= image_tag("icon_heart.png") %>
  <span>
    <%= micropost.likes_count %>
  </span>
<% end %>