<li id="micropost-<%= micropost.id %>">
  <%= link_to user_image(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user.nickname, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>（<%= micropost.child_age %>）
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に投稿されました
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                      data: { confirm: "投稿を削除しますか？" } %>
    <% end %>
  </span>
</li>