<li id="micropost-<%= micropost.id %>">
  <%= user_image(micropost.user) %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="child_age"><%= micropost.child_age %></span>
  <span class="picture"><%= image_tag micropost.picture.url if micropost.picture? %></span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に投稿されました
    <% if current_user?(micropost.user) || current_user.admin? %>
      <%= link_to "削除", micropost, method: :delete,
                                      data: { confirm: "投稿を削除しますか？" } %>
    <% end %>
  </span>
</li>