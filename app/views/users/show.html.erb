<% provide(:title, @user.nickname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= link_to user_image(@user), user_path %>
        <%= link_to @user.nickname, user_path %>
        <%= link_to("https://twitter.com/#{@user.nickname}") do %>
          <i class="fab fa-twitter-square"></i>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>投稿 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>